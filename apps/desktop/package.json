{
  "name": "desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "main.cjs",
  "scripts": {
    "dev": "cd frontend && vite",
    "build": "cd frontend && tsc -b && vite build",
    "lint": "cd frontend && eslint .",
    "preview": "cd frontend && vite preview",
    "check": "cd frontend && tsc -b --noEmit",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.3.0",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.15.30",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-dev-locator": "^1.0.0",
    "electron": "^37.4.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",

    "vite-tsconfig-paths": "^5.1.4",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.xpaste.app",
    "productName": "xPaste",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.cjs",
      "preload.cjs",
      "frontend/dist/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/icon.ico",
        "to": "icon.ico",
        "filter": ["**/*"]
      },
      {
        "from": "assets/tray-icon.png",
        "to": "tray-icon.png",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}